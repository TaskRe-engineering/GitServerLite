shopt -s nullglob

ref=$1
GIT_DIR=$2

SOURCE_DIR=".gitserverlite"

source "$SOURCE_DIR/env"
source "$SOURCE_DIR/gsl-source"

DEPLOY_BRANCHES_DIR="$GIT_DIR/$SOURCE_DIR/deploy_branches"
BRANCHES=($DEPLOY_BRANCHES_DIR/*)

PARAMS="--build --detach"

BRANCH_LOCATION="$(match $ref $BRANCHES)"
BRANCH="$(branch $BRANCH_LOCATION $DEPLOY_BRANCHES_DIR)"

if [[ ! -z "$BRANCH" ]];
then
        echo "Ref $ref matching configuration received."
        echo "Executing configuration for branch: $BRANCH"

        read_branch_record $BRANCH_LOCATION
        RESULT="$(process $GIT_DIR $DEPLOY_DIR $PARAMS $BRANCH $ENV_FILE)"
else
        echo "Ref $ref received. Doing nothing: does not match branches configured to automatically deploy."
fi
